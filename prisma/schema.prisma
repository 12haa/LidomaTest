generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Residence {
  id                      String   @id @default(cuid())
  area                    String
  isResidenceActive       Boolean
  dailyBassesPrice        String
  isPetsAllowed           Boolean? @default(false)
  isSmokingAllowed        Boolean? @default(false)
  ownerShip               Boolean? @default(false)
  paperIsWorkRequired     Boolean? @default(false)
  partyAllowence          Boolean? @default(false)
  peakBasesPrice          String
  pricePerExtraPerson     String
  residenceArea           String
  residenceExactAddress   String
  residenceBedCount       String
  residenceBedLinenCount  String
  residenceCity           String
  residenceMaxCapacity    String
  residenceName           String
  residenceNormalCapacity String
  residenceProvince       String
  residenceType           String
  weeklyBasesPrice        String
  imagePath               String
  createdAt               DateTime @default(now())
  updatedAt               DateTime @default(now())
}
